<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle3"
    tools:context=".AirtimeForSelf">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="28dp"
            android:gravity="center"
            android:layout_marginRight="28dp">
            <TextView
                android:id="@+id/MyDashboard"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfer to other Banks"
                android:textSize="22sp"
                android:textColor="#ffffff"
                />
            <TextView
                android:layout_below="@id/MyDashboard"
                android:gravity="center"
                android:id="@+id/FinancialApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Financial App"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_margin="6dp"
                />
            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@drawable/ic_person_white_24dp"
                android:layout_alignParentEnd="true"
                />
            <Button
                android:layout_marginTop="150dp"
                android:id="@+id/acessbank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/FinancialApp"
                android:backgroundTint="#f4aeae"
                android:text="Acess Bank"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/FirstBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/acessbank"
                android:backgroundTint="#f4aeae"
                android:text="First Bank"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/ZenithBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/FirstBank"
                android:backgroundTint="#f4aeae"
                android:text="Zenith Bank"
                android:textColor="#ffffff"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>